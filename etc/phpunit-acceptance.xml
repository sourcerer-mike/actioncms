<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/5.5/phpunit.xsd"
        bootstrap="../lib/tests/acceptance/bootstrap.php"
        backupGlobals="false"
        colors="true"
>
    <testsuites>
        <!-- Default test suite to run all tests -->
        <testsuite name="acceptance">
            <directory suffix=".php">../lib/tests/acceptance</directory>
        </testsuite>
    </testsuites>
    <listeners>
        <listener class="SpeedTrapListener" file="tests/phpunit/includes/speed-trap-listener.php">
            <arguments>
                <array>
                    <element key="slowThreshold">
                        <integer>150</integer>
                    </element>
                </array>
            </arguments>
        </listener>
    </listeners>
</phpunit>
